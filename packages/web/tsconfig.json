{
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "@semantic-api/api": [
        "./node_modules/@semantic-api/api/cjs"
      ],
      "@semantic-api/api/*": [
        "./node_modules/@semantic-api/api/cjs/core/*"
      ],
      "@semantic-api/api/server": [
        "./node_modules/@semantic-api/api/cjs/server"
      ],
      "@semantic-api/api/database": [
        "./node_modules/@semantic-api/api/cjs/database"
      ],
      "@semantic-api/common": [
        "./node_modules/@semantic-api/common/cjs"
      ],
      "@semantic-api/types": [
        "./node_modules/@semantic-api/types/cjs"
      ],
      "@semantic-api/system/resources/*": [
        "./node_modules/@semantic-api/system/cjs/resources/*"
      ]
    }
  }
}
