{
  "collection": "user",
  "route": true,
  "unicon": "user-circle",
  "presets": [
    "crud",
    "view",
    "duplicate"
  ],
  "individualActions": {
    "ui/spawnEdit": {
      "name": "Editar",
      "unicon": "edit",
      "userOnly": true
    },
    "route/dashboard-user-changepass": {
      "name": "Mudar senha",
      "unicon": "key-skeleton",
      "userOnly": true,
      "fetchItem": true
    },
    "delete": {
      "name": "Remover",
      "unicon": "trash-alt",
      "userOnly": true,
      "ask": true
    }
  },
  "searchable": {
    "picture": "picture",
    "indexes": [
      "name",
      "phone",
      "email"
    ]
  },
  "filters": [
    "first_name",
    "last_name",
    "role"
  ],
  "table": [
    "full_name",
    "role",
    "picture",
    "active",
    "updated_at"
  ],
  "formLayout": {
    "first_name": {
      "span": 3
    },
    "last_name": {
      "span": 3
    }
  },
  "fields": {
    "first_name": {
      "label": "Nome",
      "type": "text",
      "required": true
    },
    "last_name": {
      "label": "Sobrenome",
      "type": "text",
      "required": true
    },
    "full_name": {
      "label": "Nome completo",
      "type": "text",
      "noform": true
    },
    "active": {
      "label": "Ativo",
      "type": "boolean",
      "default": true,
      "values": [
        "Sim",
        "NÃ£o"
      ]
    },
    "role": {
      "label": "Papel",
      "type": "select",
      "values": [],
      "required": true
    },
    "email": {
      "label": "Email",
      "type": "text",
      "unique": true,
      "required": true
    },
    "password": {
      "label": "Senha",
      "type": "password",
      "hidden": true,
      "noform": true
    },
    "phone": {
      "label": "Telefone",
      "type": "text",
      "mask": "(##) #####-####"
    },
    "picture": {
      "collection": "file",
      "label": "Foto",
      "index": [
        "filename",
        "mime"
      ]
    },
    "group": {
      "label": "Grupo",
      "type": "text",
      "noform": true
    },
    "self_registered": {
      "label": "Autoregistrado",
      "type": "boolean",
      "readOnly": true
    },
    "updated_at": {
      "label": "Atualizado em",
      "type": "datetime",
      "meta": true
    }
  }
}

