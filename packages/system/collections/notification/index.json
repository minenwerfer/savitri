{
  "collection": "notification",
  "route": true,
  "presets": [
    "alwaysOwned",
    "crud"
  ],
  "fields": {
    "destination": {
      "collection": "user",
      "label": "Destinatário",
      "index": "email",
      "array": true
    },
    "title": {
      "label": "Título",
      "type": "text",
      "required": true
    },
    "action": {
      "label": "Ação",
      "type": "text"
    },
    "groups": {
      "label": "Grupos",
      "type": "text",
      "placeholder": "Ex.: logistic,producer",
      "description": "Separados por vírgula, ou vazio"
    },
    "subject": {
      "label": "Sujeito",
      "type": "text"
    },
    "content": {
      "label": "Conteúdo",
      "type": "textbox",
      "notable": true
    }
  }
}
